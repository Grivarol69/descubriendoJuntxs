// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  surName String?
  identification String?
  phone String?
  dateIn DateTime? @default(now())
  dateOut DateTime?
  description String?
  linkedin String?
  languaje String? 
  position String? 
  role Role @default(Usuario)
  participants Participant[]
  payment Payment[]
  donation Donation[]
  event Event[]
  commentary Commentary[] 
  favorite Favorite[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  program Program[] 
}

model Program {
  id     Int    @id @default(autoincrement())
  name    String
  description String
  amount Float
  objective String
  syllabus String
  state State @default(Activo)
  type ProgramType @default(Proyecto)
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
  events Event[]
  donation Donation[]
  commentary Commentary[]
  favorite Favorite[]
}


model Event {
  id Int @id @default(autoincrement())
  programId Int
  userId Int
  date DateTime? @default(now())
  hourIn DateTime?
  duration String
  amount Float
  objective String
  syllabus String
  type String
  program Program @relation(fields: [programId], references: [id])
  payment Payment?
  user User @relation(fields: [userId], references: [id])
  participants Participant[]
}

model Payment {
  id Int @id @default(autoincrement())
  eventId Int @unique
  userId Int @unique
  amount Float
  instrument String
  transactionId String
  state String
  event Event @relation(fields: [eventId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Participant {
  id Int @id @default(autoincrement())
  eventId Int
  userId Int
  role String
  state String
  event Event @relation(fields: [eventId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Donation {
  id Int @id @default(autoincrement())
  programId Int @unique
  userId Int @unique
  amount Float
  date DateTime
  type DonationType @default(Recurrente)
  frequency Frequency @default(Unico)
  message String
  contact_phone String
  contact_email String
  state PaymentState @default(Aceptado)
  program Program @relation(fields: [programId], references: [id])
  user User @relation(fields: [userId], references: [id])
  
}

model Commentary {
  programId Int 
  userId Int
  state String
  program Program @relation(fields: [programId], references: [id])
  user User @relation(fields: [userId], references: [id])
  @@id([programId,userId])
}

model Favorite {
  programId Int 
  userId Int
  program Program @relation(fields: [programId], references: [id])
  user User @relation(fields: [userId], references: [id])
  @@id([programId,userId])
}

enum Role {
  Coach
  Usuario
}

enum State {
  Activo
  Inactivo
}

enum ProgramType {
  Proyecto
  Servicio
}

enum DonationType {
  Recurrente
  Especies
  Corporativo
}

enum EventType {
  Activo
  Inactivo
  Finalizado
}

enum PaymentState {
  Aceptado
  Rechazado
  Pendiente
}

enum Frequency {
  Unico
  Mensual
  Trimestral
  Anual
}